/* @group Button */
-highlight($strength = .3)
  box-shadow: s("inset 0 1px 0 %s", rgba(255,255,255,$strength))

button, .button, [type=submit]
  -highlight()
  border:0
  border-radius: 0.25rem
  background: $grey-200
  color: $black
  cursor: pointer
  font-size: golden-font-size-base rem
  padding: (5 * golden-ratio)px (10 * golden-ratio)px
  text-align: center
  text-decoration: none
  text-transform: uppercase
  transition: all 150ms linear
  user-select: none
  vertical-align: middle
  white-space: nowrap
  &:link, &:visited
    background: $grey-200
    color: $black
  &:active,
  &.active
    background: $grey-400
    color: $black
    opacity: 0.85
    transition: all 150ms linear
    text-decoration: none
  &:hover
    opacity: 0.5
    transition: all 150ms linear
    text-decoration: none
  &:focus
    background: $grey-100
    color: $black
    opacity: 0.7
    transition: all 150ms linear
    text-decoration: none
  &:disabled
    cursor: default
    opacity: .5
    pointer-events: none
    transition: all 150ms linear
  &.primary
    background: $blue-A700
    color: $white
    cursor: pointer
    transition: all 150ms linear
    &:hover
      opacity: 0.5
      transition: all 150ms linear
      text-decoration: none
  &.secondary, &.info
    background: $light-blue-A700
    color: $white
    cursor: pointer
    transition: all 150ms linear
    &:hover
      opacity: 0.5
      transition: all 150ms linear
      text-decoration: none
  &.success
    background: $green-A700
    color: $white
    cursor: pointer
    transition: all 150ms linear
    &:hover
      opacity: 0.5
      transition: all 150ms linear
      text-decoration: none
  &.error
    background: $red-A700
    color: $white
    cursor: pointer
    transition: all 150ms linear
    &:hover
      opacity: 0.5
      transition: all 150ms linear
      text-decoration: none
  &.warning
    background: $yellow-A700
    color: $white
    cursor: pointer
    transition: all 150ms linear
    &:hover
      opacity: 0.5
      transition: all 150ms linear
      text-decoration: none

.button-group
  *letter-spacing: normal
  *word-spacing: -0.43em
  border: 0
  border-radius: 0
  letter-spacing: -0.31em
  text-rendering: optimizespeed

/* @end */
